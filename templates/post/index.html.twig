{% extends 'base.html.twig' %}

{% block title %}Articles - Gabriel.dev{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Articles</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_post_new') }}" class="btn btn-primary">Nouvel article</a>
        {% endif %}
    </div>

    {% if posts is empty %}
        <div class="alert alert-info">Aucun article pour le moment.</div>
    {% else %}
        <div class="row">
            {% for post in posts %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if post.picture %}
                            <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 220px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <div class="mb-4">
                                <span class="badge mb-2" style="background-color: {{ post.category.color ?? '#6c757d' }}">{{ post.category.name }}</span>
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text">{{ post.content|slice(0, 200) }}...</p>
                            </div>
                            <div class="d-flex align-items-center mt-auto">
                                <a href="{{ path('app_user_show', {slug: post.author.slug}) }}" class="d-flex align-items-center text-decoration-none text-reset">
                                    {% if post.author.profilePicture %}
                                        <img src="{{ asset('uploads/profiles/' ~ post.author.profilePicture) }}" alt="{{ post.author.firstName }}" class="rounded-circle me-2" style="width: 25px; height: 25px; object-fit: cover;">
                                    {% endif %}
                                    <small class="fw-bold">Par {{ post.author.firstName }} {{ post.author.lastName }}</small>
                                </a>
                                <small class="text-muted ms-1">le {{ post.publishedAt|date('d/m/Y') }}</small>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <span class="text-muted"><small>{{ post.comments|length }} commentaire(s)</small></span>
                            <div>
                                <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="btn btn-sm btn-outline-primary">Lire</a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_post_edit', {slug: post.slug}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(posts) }}
        </div>
    {% endif %}
{% endblock %}
