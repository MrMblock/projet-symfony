{% extends 'base.html.twig' %}

{% block title %}Accueil - Gabriel.dev{% endblock %}


{% block body %}
    <h2 id="articles" class="section-title mb-4 mt-5">Derniers <span>articles</span></h2>

    {% if posts is empty %}
        <div class="alert alert-info">Aucun article pour le moment.</div>
    {% else %}
        <div class="slider-wrapper" data-controller="grid-slider">
            <div class="d-flex justify-content-end mb-3 gap-2">
                <button class="btn btn-outline-dark btn-sm rounded-circle" data-grid-slider-target="prev" data-action="click->grid-slider#prev">
                    &larr;
                </button>
                <button class="btn btn-outline-dark btn-sm rounded-circle" data-grid-slider-target="next" data-action="click->grid-slider#next">
                    &rarr;
                </button>
            </div>

            <div class="slider-container">
                                        <div class="slider-track" data-grid-slider-target="track">
                    {% for post in posts %}
                        <div class="slider-item" data-grid-slider-target="item">
                            <div class="card h-100">
                                {% if post.picture %}
                                    <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 200px; object-fit: cover;">
                                {% endif %}
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-4">
                                        <span class="badge mb-2" style="background-color: {{ post.category.color ?? '#6c757d' }}">{{ post.category.name }}</span>
                                        <h5 class="card-title">{{ post.title }}</h5>
                                        <p class="card-text">{{ post.content|striptags|slice(0, 120) }}...</p>
                                    </div>
                                    <div class="d-flex align-items-center mt-auto">
                                        <a href="{{ path('app_user_show', {slug: post.author.slug}) }}" class="d-flex align-items-center text-decoration-none text-dark">
                                            {% if post.author.profilePicture %}
                                                <img src="{{ asset('uploads/profiles/' ~ post.author.profilePicture) }}" alt="{{ post.author.firstName }}" class="rounded-circle me-2" style="width: 28px; height: 28px; object-fit: cover; border: 2px solid var(--accent);">
                                            {% endif %}
                                            <span class="fw-bold small">{{ post.author.firstName }} {{ post.author.lastName }}</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-between align-items-center">
                                    <small class="text-muted">{{ post.publishedAt|date('d/m/Y') }}</small>
                                    <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="btn btn-sm btn-outline-primary">Lire la suite</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(posts) }}
        </div>
    {% endif %}
{% endblock %}
