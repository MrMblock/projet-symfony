{% extends 'base.html.twig' %}

{% block title %}Connexion - Gabriel.dev{% endblock %}

{% block body %}
	<div data-controller="auth-bg">
		<div class="auth-threejs-canvas" data-auth-bg-target="canvas"></div>

		<div class="auth-wrapper">
			<div class="auth-card">
				<div class="text-center mb-4">
					<h1>Bon retour</h1>
					<p class="auth-subtitle">Connectez-vous a votre compte</p>
				</div>

				{% if error %}
					<div class="alert alert-danger">
						<i class="bi bi-exclamation-triangle-fill me-2"></i>
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				{% if app.user %}
					<div class="alert alert-info">
						<i class="bi bi-info-circle-fill me-2"></i>
						Vous etes connecte en tant que {{ app.user.userIdentifier }}.
						<a href="{{ logout_path() }}">Deconnexion</a>
					</div>
				{% endif %}

				<form method="post">
					<div class="mb-3">
						<label for="inputEmail" class="form-label">Adresse Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="votre@email.com" required autofocus>
					</div>

					<div class="mb-4">
						<label for="inputPassword" class="form-label">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="••••••••" required>
					</div>

					<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

					<div class="form-check mb-4">
						<input type="checkbox" name="_remember_me" class="form-check-input" id="rememberMe">
						<label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
					</div>

					<button class="btn btn-auth" type="submit">
						Se connecter
						<i class="bi bi-arrow-right ms-2"></i>
					</button>

					<div class="auth-divider">
						<hr>
						<span>OU</span>
						<hr>
					</div>

					<a href="{{ path('connect_google_start') }}" class="btn btn-google d-flex align-items-center justify-content-center">
						<svg viewbox="0 0 48 48" class="me-2" style="width: 20px; height: 20px;">
							<path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
							<path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
							<path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24s.92 7.54 2.56 10.78l7.97-6.19z"></path>
							<path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
						</svg>
						Continuer avec Google
					</a>
				</form>

				<div class="auth-footer">
					Pas encore de compte ?
					<a href="{{ path('app_register') }}">S'inscrire</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
