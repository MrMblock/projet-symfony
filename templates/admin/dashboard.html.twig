{% extends 'base.html.twig' %}

{% block title %}Administration - Mon Blog{% endblock %}

{% block body %}
    <h1 class="mb-4">Tableau de bord</h1>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h3>{{ totalPosts }}</h3>
                    <p class="mb-0">Articles</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h3>{{ totalUsers }}</h3>
                    <p class="mb-0">Utilisateurs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info position-relative">
                <div class="card-body text-center">
                    <h3>{{ totalComments }}</h3>
                    <p class="mb-0">Commentaires</p>
                </div>
                {% if unreadComments > 0 %}
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        {{ unreadComments }}
                        <span class="visually-hidden">non lus</span>
                    </span>
                {% endif %}
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <h3>{{ totalCategories }}</h3>
                    <p class="mb-0">Categories</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Articles</h5>
                    <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-sm">Nouvel article</a>
                    <a href="{{ path('app_post_index') }}" class="btn btn-outline-primary btn-sm">Voir tout</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Utilisateurs</h5>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-outline-success btn-sm">Gerer</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <a href="{{ path('app_admin_category_new') }}" class="btn btn-warning btn-sm">Nouvelle</a>
                    <a href="{{ path('app_admin_categories') }}" class="btn btn-outline-warning btn-sm">Voir tout</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Commentaires
                        {% if unreadComments > 0 %}
                            <span class="badge bg-danger rounded-pill">{{ unreadComments }} non lu{{ unreadComments > 1 ? 's' : '' }}</span>
                        {% endif %}
                    </h5>
                    <a href="{{ path('app_admin_comments') }}" class="btn btn-outline-info btn-sm">Moderer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
