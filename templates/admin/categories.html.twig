{% extends 'base.html.twig' %}

{% block title %}Gestion des categories - Mon Blog{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Categories</h1>
        <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">Nouvelle categorie</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Nb articles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.description|default('â€”') }}</td>
                    <td>{{ category.posts|length }}</td>
                    <td>
                        <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <form action="{{ path('app_admin_category_delete', {id: category.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Supprimer cette categorie ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Retour</a>
{% endblock %}
