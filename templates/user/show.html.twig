{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row align-items-center mb-5">
        <div class="col-md-3 text-center">
            {% if user.profilePicture %}
                <img src="{{ asset('uploads/profiles/' ~ user.profilePicture) }}" alt="{{ user.firstName }}" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
            {% else %}
                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 150px; height: 150px;">
                    <span class="text-white h1">{{ user.firstName|first }}{{ user.lastName|first }}</span>
                </div>
            {% endif %}
        </div>
        <div class="col-md-9">
            <h1>{{ user.firstName }} {{ user.lastName }}</h1>
            <p class="text-muted">Membre depuis le {{ user.createdAt|date('d/m/Y') }}</p>
            <p>{{ user.posts|length }} article(s) publie(s)</p>
        </div>
    </div>

    <hr>

    <h2 class="mb-4">Articles publies de {{ user.firstName }}</h2>
    <div class="row">
        {% for post in user.posts %}
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    {% if post.picture %}
                        <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="text-decoration-none text-reset">
                                {{ post.title }}
                            </a>
                        </h5>
                        <p class="card-text text-muted small">
                            Publie le {{ post.publishedAt|date('d/m/Y') }} dans <span class="badge bg-secondary">{{ post.category.name }}</span>
                        </p>
                        <p class="card-text">
                            {{ post.content|striptags|slice(0, 100) }}...
                        </p>
                        <a href="{{ path('app_post_show', {slug: post.slug}) }}" class="btn btn-primary btn-sm">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">Cet utilisateur n'a pas encore publie d'article.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
