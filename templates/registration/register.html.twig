{% extends 'base.html.twig' %}

{% block title %}Inscription - Gabriel.dev{% endblock %}

{% block body %}
	<div data-controller="auth-bg">
		<div class="auth-threejs-canvas" data-auth-bg-target="canvas"></div>

		<div class="auth-wrapper">
			<div class="auth-card">
				<div class="text-center mb-4">
					<h1>Creer un compte</h1>
				</div>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm, {'attr': {'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}

				<div class="row g-3 mb-3">
					<div class="col-md-6">
						{{ form_row(registrationForm.firstName) }}
					</div>
					<div class="col-md-6">
						{{ form_row(registrationForm.lastName) }}
					</div>
				</div>

				<div class="mb-3">
					{{ form_row(registrationForm.email) }}
				</div>

				<div class="mb-3">
					{{ form_row(registrationForm.profilePictureFile) }}
				</div>

				<div class="mb-3">
					{{ form_row(registrationForm.plainPassword) }}
				</div>

				<div class="mb-4">
					{{ form_row(registrationForm.agreeTerms) }}
				</div>

				<button type="submit" class="btn btn-auth">
					S'inscrire
					<i class="bi bi-arrow-right ms-2"></i>
				</button>

				<div class="auth-divider">
					<hr>
					<span>OU</span>
					<hr>
				</div>

				<a href="{{ path('connect_google_start') }}" class="btn btn-google d-flex align-items-center justify-content-center">
					<svg viewbox="0 0 48 48" class="me-2" style="width: 20px; height: 20px;">
						<path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
						<path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
						<path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24s.92 7.54 2.56 10.78l7.97-6.19z"></path>
						<path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
					</svg>
					S'inscrire avec Google
				</a>

				{{ form_end(registrationForm) }}

				<div class="auth-footer">
					Deja un compte ?
					<a href="{{ path('app_login') }}">Se connecter</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
